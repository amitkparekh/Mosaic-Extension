{
    "name": "Mosaic ALPHA",
    "description": "Replace your new tab page with beautiful and highly customisable tiles.",
    "default_locale": "en",
    "version": "2015.5.25",
    "incognito": "split",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "chrome://favicon/",
        "unlimitedStorage",
        "management",
        "history",
        "bookmarks",
        "identity",
        "identity.email",
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "js/util.js",
            "js/background/backgroundutils.js",
            "js/background/config.js",
            "js/background/idb.js",
            "js/background/webService.js"
        ]
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "manifest_version": 2
}
